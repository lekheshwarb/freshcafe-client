{{yield}}
<div class="col-sm-6 my-3">
  <div class="card shadow" style="border:none; border-left: 5px solid green; ">
    <div class="card-body">
      <div class="d-flex justify-content-between mb-3">
        <div>
          <span class="fw-light fs-6">order </span>
          <span class="fs-4 fw-bold">#{{invoice.id}}</span>
        </div>
        <button
          class="btn btn-success fs-5 fw-bold text-capitalize"
          style="cursor: default;"
        ><i class="bi bi-clipboard-check-fill"></i>
          {{invoice.status}}</button>
      </div>
      <div class="d-flex fw-light fs-6 my-1" style="color: rgb(139, 139, 139);">
        <i class="bi bi-person-fill"></i>&nbsp;
        {{invoice.user}}
      </div>
      <div class="d-flex fw-light fs-6 my-1" style="color: rgb(139, 139, 139);">
        <i class="bi bi-calendar-date-fill"></i>&nbsp;
        {{invoice.createdAt}}
      </div>
      <div class="d-flex fs-6 mt-4 mb-2 fw-bold">
        items
      </div>
      <div class="overflow-scroll" style="height: 100px;">
        {{#each invoice.items as |item|}}
          <div class="row text-start">
            <span class="col-8">{{item.item_name}}</span>
            <span class="col-2">x{{item.quantity}}</span>
            <span class="col-2">{{item.item_price}}</span>
          </div>
        {{/each}}

      </div>
      <div class="d-flex justify-content-end mt-4">
        <span class="fw-bold fs-4">${{totalAmount}}</span>
      </div>
    </div>
  </div>
</div>
