{{yield}}
<div class="d-flex m-2 border-bottom border-top">
  <button
    type="button"
    class="btn btn-light p-2"
    {{action changeFilter null}}
  >All Users</button>
  <button
    type="button"
    class="btn btn-light p-2"
    {{action changeFilter "customer"}}
  >Customers</button>
  <button
    type="button"
    class="btn btn-light p-2"
    {{action changeFilter "clerk"}}
  >Billing Clerks</button>
  <button
    type="button"
    class="btn btn-light p-2"
    {{action changeFilter "owner"}}
  >
    Owners</button>

  <button
    type="button"
    class="btn btn-primary ms-auto mr-3"
    data-bs-toggle="modal"
    data-bs-target="#modalAddUserForm"
  >
    Add User
  </button>

  <!-- Modal -->
  <div
    class="modal fade"
    id="modalAddUserForm"
    data-bs-backdrop="static"
    data-bs-keyboard="false"
    tabindex="-1"
    aria-labelledby="staticBackdropLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Add User</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <div class="mb-3 text-start fw-normal">
            <label for="userName" class="form-label">Name
            </label>
            <input
              type="text"
              class="form-control"
              id="userName"
              value={{this.name}}
              onchange={{action (mut this.name) value="target.value"}}
            />
          </div>
          <div class="mb-3 text-start fw-normal">
            <label for="userMail" class="form-label">Email address</label>
            <input
              type="email"
              class="form-control"
              id="userMail"
              placeholder="name@example.com"
              value={{this.email}}
              onchange={{action (mut this.email) value="target.value"}}
            />
          </div>
          <div class="mb-3 text-start fw-normal">
            <label for="userPhone" class="form-label">Phone</label>
            <input
              type="number"
              class="form-control"
              id="userPhone"
              value={{this.phone}}
              onchange={{action (mut this.phone) value="target.value"}}
            />
          </div>
          <div class="mb-3 text-start fw-normal">
            <label for="userPassword" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              id="userPassword"
              value={{this.password}}
              onchange={{action (mut this.password) value="target.value"}}
            />
          </div>

          <div class="mb-3 text-start fw-normal">
            <label for="userAddresss" class="form-label">Address</label>
            <textarea
              class="form-control"
              id="userAddress"
              rows="3"
              value={{this.address}}
              onchange={{action (mut this.address) value="target.value"}}
            ></textarea>
          </div>

          <div class="mb-3 text-start fw-normal">
            <label class="form-label">Role</label>
            <select
              class="form-select"
              aria-label="Default select example"
              value={{this.role}}
              onchange={{action (mut this.role) value="target.value"}}
            >
              <option selected>Choose Role</option>
              <option value="clerk">Clerk</option>
              <option value="owner">Owner</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >Cancel</button>
          <button
            type="button"
            class="btn btn-primary"
            {{action "addNewUser"}}
          >Add</button>
        </div>
      </div>
    </div>
  </div>

</div>
