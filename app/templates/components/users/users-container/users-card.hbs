<div class="card w-100 m-1">
  <div class="card-body row align-items-center">
    <div class="card-title col-3 text-start">
      <div class="fs-5 fw-normal">
        <i class="bi bi-person-fill"></i>
        <span> John Doe</span>
      </div>
    </div>
    <div class="card-text col-3">
      johndoe@gmail.com</div>

    <div class="card-text col-3">9898989898</div>
    <span class="col-3 text-end">
      <button
        class="btn btn-outline-dark m-2"
        data-bs-toggle="modal"
        data-bs-target="#modalEditUserForm"
      >
        <i class="bi bi-pen-fill"></i>
      </button>
      {{! Modal for Edit user }}
      <div
        class="modal fade"
        id="modalEditUserForm"
        data-bs-backdrop="static"
        data-bs-keyboard="false"
        tabindex="-1"
        aria-labelledby="staticBackdropLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="editUserLabel">Edit User</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <div class="mb-3 text-start fw-normal">
                <label for="userName" class="form-label">Name
                </label>
                <input type="text" class="form-control" id="userName" />
              </div>
              <div class="mb-3 text-start fw-normal">
                <label for="userMail" class="form-label">Email address</label>
                <input
                  type="email"
                  class="form-control"
                  id="userMail"
                  placeholder="name@example.com"
                />
              </div>
              <div class="mb-3 text-start fw-normal">
                <label for="userPhone" class="form-label">Phone</label>
                <input type="number" class="form-control" id="userPhone" />
              </div>
              <div class="mb-3 text-start fw-normal">
                <label for="userPassword" class="form-label">Password</label>
                <input type="password" class="form-control" id="userPassword" />
              </div>

              <div class="mb-3 text-start fw-normal">
                <label for="userAddresss" class="form-label">Address</label>
                <textarea
                  class="form-control"
                  id="userAddress"
                  rows="3"
                ></textarea>
              </div>

              <div class="mb-3 text-start fw-normal">
                <label class="form-label">Role</label>
                <select class="form-select" aria-label="Default select example">
                  <option selected>Choose Role</option>
                  <option value="clerk">Clerk</option>
                  <option value="owner">Owner</option>
                  <option value="customer">Customer</option>
                </select>
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >Cancel</button>
              <button type="button" class="btn btn-primary">Add</button>
            </div>
          </div>
        </div>
      </div>

      <button class="btn btn-danger">
        <i class="bi bi-trash-fill"></i>
      </button>
    </span>
  </div>
</div>
